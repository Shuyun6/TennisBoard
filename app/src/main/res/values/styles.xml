<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Customizing ImageSelect Dialog style-->
    <style name="ImageSelectDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- transparent background -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- float on activity -->
        <item name="android:windowIsFloating">true</item>
        <!-- frame -->
        <item name="android:windowFrame">@null</item>
        <!-- effect outside the frame -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- no title -->
        <item name="android:windowNoTitle">true</item>
        <!-- half transparent -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog in&out animation -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!-- animation -->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/imageselect_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/imageselect_dialog_out</item>
    </style>

    <style name="ActivityTransAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/transanim_in</item>
        <item name="android:activityOpenExitAnimation">@anim/transanim_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/transanim_out</item>
        <item name="android:activityCloseExitAnimation">@anim/transanim_in</item>
    </style>
</resources>
